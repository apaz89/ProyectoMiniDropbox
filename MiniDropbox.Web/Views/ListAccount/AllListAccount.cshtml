@using BootstrapSupport
@model System.Collections.Generic.List<MiniDropbox.Domain.Account>


@{
    ViewBag.Title = "MyContent";
    Layout = "~/Views/shared/_BootstrapLayout.basic.cshtml";
}

<h4>Mis Archivos <small></small></h4>
<table class="table table-striped">
    <caption></caption>
    <thead>
        <tr>
            @foreach (var property in Model[0].VisibleProperties())
            {
                if (property.GetLabel() != "Email" && property.GetLabel() != "Id" && property.GetLabel() != "Files" && property.GetLabel() != "TranUrl" && property.GetLabel() != "IsArchived" && property.GetLabel() != "Password")
                {
                    <th>
                        @property.GetLabel().ToSeparatedWords()
                    </th>
                }
            }
            <th></th>
        </tr>
        <tr>@ViewData["Nombre"]</tr>
    </thead>
    @{ int index = 0; }
    @foreach (var model in Model)
    {
        ViewData[index.ToString()] = model;
        <tr>
            @foreach (var property in model.VisibleProperties())
            {
                if (property.Name != "Email" && property.Name != "Id" && property.Name != "Files" && property.Name != "TranUrl" && property.Name != "IsArchived" && property.Name != "Password")
                {
                    <td>
                        @Html.Display(index + "." + property.Name)
                    </td>
                }
            }
            <td>
                <div class="btn-group">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        Action
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @{
                            @Html.TryPartial("_actions", model)                            
                            var routevalues = model.GetIdValue();  
                            <li>@Html.ActionLink("Cambiar Espacio Asignado", "Edit", routevalues)</li>
                            <li>@Html.ActionLink("Bloquear cuenta", "BloquearCuenta", routevalues)</li>
                            <li class="divider"></li>
                               
                        }
                    </ul>
                </div>

            </td>
        </tr>
            index++;
    }

</table>
